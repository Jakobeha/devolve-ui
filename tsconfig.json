{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "module": "es2020",
    "target": "esnext",
    "baseUrl": "./",
    "rootDir": "src",
    "paths": {
      "*": ["./src/*"],
      "@raycenity/misc-ts": ["../misc-ts/out/types/index.d.ts"],
      "@raycenity/terminal-image-min": ["../terminal-image-min/out/types/index.d.ts"]
    },
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./out/types",
    "declarationMap": true,
    "composite": true,
    "isolatedModules": true
  },
  "references": [
    { "path": "../misc-ts" },
    { "path": "../terminal-image-min" }
  ]
}
